{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src/",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "strict": true,
    "lib": ["esnext", "dom"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist",
    "noImplicitAny": true,
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./typings"],
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "typings/*"]
    },
    "downlevelIteration": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__tests__", "examples/**/*", "src/setupEnzyme.ts"]
}
