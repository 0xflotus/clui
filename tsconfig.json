{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src/",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "strict": true,
    "lib": ["esnext"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist",
    "noImplicitAny": true,
    "removeComments": true,
    "downlevelIteration": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__tests__", "src/setupEnzyme.ts"]
}
